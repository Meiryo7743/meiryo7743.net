{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "dependencyDashboardLabels": ["renovate"],
  "extends": ["config:recommended", "helpers:pinGitHubActionDigests"],
  "labels": ["renovate"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "autoApprove": true,
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ]
    }
  ],
  "timezone": "Asia/Tokyo"
}
